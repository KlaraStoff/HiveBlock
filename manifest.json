{
  "manifest_version": 2,

  "name": "HiveBlock",
  "description": "When enabled, blocks coinhive domains",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
	"webRequestBlocking",
	"http://*/",
	"https://*/",
	"tabs",
	"webNavigation"
  ],
  "background": {
	"scripts": ["background.js"]
  }
}